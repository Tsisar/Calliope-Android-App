<!-- fragment_edit_name.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"  >

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:rotation="270"
        android:orientation="vertical">

        <cc.calliope.mini.SvgRatingBar
            android:id="@+id/pattern_a"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:numStars="5"
            android:progressDrawable="@drawable/ratingbar"
            android:stepSize="1" />

        <cc.calliope.mini.SvgRatingBar
            android:id="@+id/pattern_b"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:numStars="5"
            android:progressDrawable="@drawable/ratingbar"
            android:stepSize="1" />

        <cc.calliope.mini.SvgRatingBar
            android:id="@+id/pattern_c"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:numStars="5"
            android:progressDrawable="@drawable/ratingbar"
            android:stepSize="1" />

        <cc.calliope.mini.SvgRatingBar
            android:id="@+id/pattern_d"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:numStars="5"
            android:progressDrawable="@drawable/ratingbar"
            android:stepSize="1" />

        <cc.calliope.mini.SvgRatingBar
            android:id="@+id/pattern_e"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:numStars="5"
            android:progressDrawable="@drawable/ratingbar"
            android:stepSize="1" />
    </LinearLayout>

    <Button
        android:id="@+id/button_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK" />

</LinearLayout>